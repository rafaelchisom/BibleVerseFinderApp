@page
@model IndexModel
@{
    ViewData["Title"] = "Bible Verse Finder";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Find Encouragement in Scripture</h1>

    <form method="post" class="mb-4 text-center" onsubmit="showSpinner()">
        <input asp-for="Topic" class="form-control form-control-lg w-75 mx-auto" placeholder="Enter a topic like 'anxiety', 'grief', 'hope'..." />
        <button type="submit" class="btn btn-primary mt-3">📖 Get Verses</button>
    </form>

    <!-- Spinner -->
    <div id="loadingSpinner" class="text-center mt-4" style="display:none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Listening for God’s still small voice…</p>
    </div>

    @if (Model.Verses.Any())
    {
        <!-- Verse Share Card -->
        <div id="verseCard" class="p-4 bg-white rounded shadow verse-share" style="max-width: 700px; margin: 0 auto;">
            <h4 class="text-center mb-4 text-primary">Verses on <em>@Model.LastTopic</em></h4>

            @foreach (var verse in Model.Verses)
            {
                <div class="mb-3 border-bottom pb-2">
                    <strong>@verse.Verse</strong>
                    <p class="fst-italic text-dark mb-1">"@verse.Text"</p>
                    <p class="text-muted small">@verse.Note</p>
                </div>
            }

            <blockquote class="blockquote text-center mt-4">
                <p class="fw-bold text-success">“@Model.Encouragement”</p>
            </blockquote>
        </div>

        <!-- Share Button -->
        <div class="text-center mt-4">
            <button id="saveImageBtn" class="btn btn-outline-secondary">
                📸 Save as Devotional Image
            </button>
        </div>
    }
</div>

@section Scripts {
    <!-- html2canvas CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <script>
        function showSpinner() {
            document.getElementById("loadingSpinner").style.display = "block";
        }

        document.getElementById("saveImageBtn")?.addEventListener("click", function () {
            const card = document.getElementById("verseCard");
            html2canvas(card).then(canvas => {
                const link = document.createElement('a');
                link.download = 'bible_verses.png';
                link.href = canvas.toDataURL("image/png");
                link.click();
            });
        });
    </script>
}
